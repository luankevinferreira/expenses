<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="luankevinferreira.expenses">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".AnalyticsApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="luankevinferreira.expenses.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="luankevinferreira.expenses.ExpenseActivity"
            android:parentActivityName="luankevinferreira.expenses.HistoryActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name="luankevinferreira.expenses.HistoryActivity"
            android:label="@string/activity_history"
            android:parentActivityName="luankevinferreira.expenses.MainActivity" />
    </application>

</manifest>
